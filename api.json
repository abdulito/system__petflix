  "ports": { "80": { "protocol": "HTTP" } },

  "build": {
    "git_repository": {
      "url": "https://github.com/mlab-lattice/example-petflix-service.git",
      "commit": "08c58b1e42542af92c7078c8d345f09d00e1eb17"
    },
    "language": "node:boron",
    "command": ["npm install"]
  },

  "exec": {
    "command": [
      "node",
      "index.js"
    ],
    "environment": {
      "MONGODB_URI": "mongodb://lattice:lattice@ds161873.mlab.com:61873/tim-demo",
      "PORT": "80"
    }
  },

  "num_instances": 1,
  "instance_type": "t2.small"
}
