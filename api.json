{
  "type": "service",
  "name": "api",
  "description": "Backend API for Petflix app",

  "secrets": {
    "mongodb-uri": {}
  },
  "components": [
    {
      "name": "api",
      "ports": [
        {
          "name": "http",
          "port": 80,
          "protocol": "HTTP"
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/mlab-lattice/example-petflix-service",
          "commit": "8ec9914f4a2fd71107f9a8e75b2f4605c69324b0"
        },
        "language": "node:boron",
        "command": "npm install"
      },
      "exec": {
        "command": [
          "node",
          "index.js"
        ],
        "environment": {
          "MONGODB_URI": { "secret": "mongodb-uri" },
          "PORT": "80"
        }
      }
    }
  ],
  "resources": {
    "num_instances": 5,
    "node_pool": {
      "instance_type": "t2.small",
      "num_instances": 3
    }
  }
}
