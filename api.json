{
  "$": {
    "name": "api",
    "type": "service",
    "description": "Backend API for Petflix app"
  },
  "components": [
    {
      "name": "api",
      "ports": [
        {
          "name": "http",
          "port": 80,
          "protocol": "HTTP"
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/mlab-lattice/example-petflix-service",
          "commit": "7651060c28687531116837cdeb685d5e5be5a02b"
        },
        "language": "node:boron",
        "command": "npm install"
      },
      "exec": {
        "command": [
          "node",
          "index.js"
        ],
        "environment": {
          "MONGODB_URI": "mongodb://lattice:lattice@ds161873.mlab.com:61873/tim-demo",
          "PORT": "80"
        }
      }
    }
  ],
  "resources": {
    "num_instances": 1,
    "instance_type": "t2.small"
  }
}
