{
  "type": "service",
  "name": "api",
  "description": "Backend API for Petflix app",

  "components": [
    {
      "name": "api",
      "ports": [
        {
          "name": "http",
          "port": 80,
          "protocol": "HTTP"
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/mlab-lattice/example-petflix-service.git",
          "commit": "8ec9914f4a2fd71107f9a8e75b2f4605c69324b0"
        },
        "language": "node:boron",
        "command": "npm install"
      },
      "exec": {
        "command": [
          "node",
          "index.js"
        ],
        "environment": {
          "MONGODB_URI": "mongodb://lattice:lattice@ds161873.mlab.com:61873/tim-demo",
          "PORT": "80"
        }
      }
    }
  ],
  "resources": {
    "num_instances": 1,
    "instance_type": "t2.small"
  }
}
