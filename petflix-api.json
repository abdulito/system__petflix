{
  "name": "petflix-api",
  "type": "Service",
  "description": "Backend API for Petflix app"
  "components": [
    {
      "name": "api",
      "ports": [
        {
          "name": "http",
          "port": 80,
          "protocol": "HTTP"
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/mlab-lattice/example-petflix-service",
          "tag": "v1.0.0"
        },
        "language": "node:boron",
        "command": "npm install"
      },
      "exec": {
        "command": [
          "node",
          "index.js"
        ],
        "environment": {
          "MONGODB_URI": "mongodb://lattice:lattice@ds161873.mlab.com:61873/tim-demo",
          "PORT": "80"
        }
      }
    }
  ],
  "resources": {
    "num_instances": 1
  }
}
