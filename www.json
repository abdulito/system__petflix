{
  "$": {
    "name": "www",
    "type": "service",
    "description": "Webserver for public web app. Serves static files for client and proxies to API."
  },
  "components": [
    {
      "name": "www",
      "ports": [
        {
          "name": "http",
          "port": 8080,
          "protocol": "HTTP",
          "external_access": {
            "public": true
          }
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/mlab-lattice/example-petflix-www",
          "commit": "3d2acf451eb031694915c8aa755555a09037db80"
        },
        "language": "node:boron",
        "command": "npm install && npm run build"
      },
      "exec": {
        "command": [
          "node",
          "app.js"
        ],
        "environment": {
          "PETFLIX_API_URI": "http://api.petflix"
        }
      }
    }
  ],
  "resources": {
    "num_instances": 1,
    "instance_type": "t2.small"
  }
}

